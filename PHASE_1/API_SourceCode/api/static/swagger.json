{
    "openapi": "3.0.0",
    "info": {
      "description": "This is API developed by the team Teletubbies using a database with information from WHO ",
      "version": "1.0.0",
      "title": "Teletubbies API"
    },
    "servers": [
      {
        "url": "/"
      }
    ],
    "tags": [
      {
        "name": "Diseases Information",
        "description": "This API is used to get information from Epidemics"
      }
    ],
    "paths": {
      "/report": {
        "get": {
          "tags": [
            "Book Request"
          ],
          "summary": "Get articles by requested date range",
          "parameters": [
            {
              "in": "query",
              "name": "start_date",
              "required": true,
              "description": "Start date for the articles"
            }, 
            {
              "in": "query",
              "name": "end_date",
              "required": true,
              "description": "End date for the articles"
            },
            {
              "in": "query",
              "name": "location",
              "description": "The location where the epidemic takes place"
            },
            {
              "in": "query",
              "name": "key-terms",
              "description": "The key terms to look for when finding article"
            }
          ],
          "responses": {
            "200": {
              "description": "OK",
              "schema": {
                "$ref": "#/components/schemas/bookRequest"
              }
            },
            "400": {
              "description": "Failed. Misunderstood Request."
            },
            "404": {
              "description": "Failed. Book request not found."
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "report": {
            "type": "object",
            "properties": {
                "url": {
                    "type": "string",
                    "format": "website"
                  },
                "id": {
                  "type": "integer"
                }, 
                "eventdate": {
                  "type": "string",
                  "format": "date"
                }
            }
        },  
        "disease": {
          "properties": {
            "reportId": {
              "type": "int"
            }, 
            "disease": {
                "type": "string"
              }
          }
        },
        "syndrome": {
          "type": "object",
          "properties": {
            "reportId": {
              "type": "int"
            }, 
            "symptom": {
                "type": "string"
              }
          }
        },
        "location": {
          "properties": {
            "reportId": {
              "type": "int"
            }, 
            "location": {
                "type": "string"
              }
          }
        },
        "searchTerm": {
            "type": "object",
            "properties": {
              "reportId": {
                "type": "int"
              }, 
              "searchTerm": {
                  "type": "string"
                }
            }
          },
        "article": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string",
              "format": "website"
            },
            "headline": {
              "type": "string"
            },
            "mainText": {
              "type": "string"
            },
            "publicationDate": {
              "type": "string",
              "format": "date"
            }
          }
        },
        "description": {
          "type": "object",
          "properties": {
            "reportId": {
              "type": "string"
            },
            "source": {
              "type": "string"
            },
            "cases": {
              "type": "integer"
            },
            "deaths": {
              "type": "integer"
            },
            "controls": {
              "type": "string"
            }
          }
        }
      }
    }
  }