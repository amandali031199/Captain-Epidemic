{
    "openapi": "3.0.0",
    "info": {
      "description": "This is API developed by the team Teletubbies using a database with information from WHO ",
      "version": "1.0.0",
      "title": "Teletubbies API"
    },
    "servers": [
      {
        "url": "/"
      }
    ],
    "tags": [
      {
        "name": "Book Request",
        "description": "Example API for requesting and return book requests"
      }
    ],
    "paths": {
      "/article/{start_date}/{end_date}": {
        "get": {
          "tags": [
            "Epidemic Reports"
          ],
          "summary": "This API is used to get information from Epidemics",
          "parameters": [
            {
              "in": "path",
              "name": "start_date",
              "required": true,
              "description": "Start date for the articles.  Use format YYYY-MM-DDTHH:MM:SS"
            }, 
            {
              "in": "path",
              "name": "end_date",
              "required": true,
              "description": "End date for the articles.  Use format YYYY-MM-DDTHH:MM:SS"
            },
            {
              "in": "query",
              "name": "location",
              "description": "The location where the epidemic takes place"
            },
            {
              "in": "query",
              "name": "key_terms",
              "description": "The key terms to look for when finding article"
            }
          ],
          "responses": {
            
            "200": {
              "description": "OK",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "start_date": {
                        "type": "string",
                        "description": "The start date of the articles"
                      },
                      "end_date": {
                        "type": "string",
                        "description": "The end date of the articles"
                      },
                      "location": {
                        "type": "string",
                        "description": "The location where the epidemic takes place"
                      },
                      "key_terms": {
                        "type":"string",
                        "description": "The key terms to look for when finding article"
                      }
                    },
                    "example": [ {
                      
                      "url": "string",
                      "date_of_publication": "date-time",
                      "headline": "string",
                      "main_text": "string",
                      "reports": [
                      {
                      "event_date": "date-time",
                      "locations": [
                      {
                      "country": "string",
                      "location": "string"
                      }
                      ],
                      "diseases": [
                      "string"
                      ],
                      "syndromes": [
                      "string"
                      ]
                      }
                      ]
                    } ]
                  }
                }
              }

            },
            "404": {
              "description": "No data found"
            },
            "400": {
              "description": "Failed. Incorrect information provided."
            }
            
          }
        }
      }
    },
    "components": {
      "schemas": {
        "report": {
            "type": "object",
            "properties": {
                "url": {
                    "type": "string",
                    "format": "website"
                  },
                "id": {
                  "type": "integer"
                }, 
                "eventdate": {
                  "type": "string",
                  "format": "date"
                }
            }
        },  
        "disease": {
          "properties": {
            "reportId": {
              "type": "int"
            }, 
            "disease": {
                "type": "string"
              }
          }
        },
        "syndrome": {
          "type": "object",
          "properties": {
            "reportId": {
              "type": "int"
            }, 
            "symptom": {
                "type": "string"
              }
          }
        },
        "location": {
          "properties": {
            "reportId": {
              "type": "int"
            }, 
            "location": {
                "type": "string"
              }
          }
        },
        "searchTerm": {
            "type": "object",
            "properties": {
              "reportId": {
                "type": "int"
              }, 
              "searchTerm": {
                  "type": "string"
                }
            }
          },
        "article": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string",
              "format": "website"
            },
            "headline": {
              "type": "string"
            },
            "mainText": {
              "type": "string"
            },
            "publicationDate": {
              "type": "string",
              "format": "date"
            }
          }
        },
        "description": {
          "type": "object",
          "properties": {
            "reportId": {
              "type": "string"
            },
            "source": {
              "type": "string"
            },
            "cases": {
              "type": "integer"
            },
            "deaths": {
              "type": "integer"
            },
            "controls": {
              "type": "string"
            }
          }
        }
      }
    }
  }